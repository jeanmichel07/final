{% extends 'front.html.twig' %}

{% block body %}
    <div class="container-contact100" style="padding-top: 60px;">
        <div class="wrap-contact100">
            <form class="contact100-form validate-form">

				<span class="contact100-form-title">
					<strong style="color: #545454">Pour plus d'information</strong> <br> CONTACTEZ-NOUS
				</span>

                <span class="label-input100">Je suis*</span>
                <div class="wrap-input100 input100-select  bg1">
                    <div>
                        <select class="js-select2" name="service">
                            <option>Sélectionner</option>
                            <option>Responsable de recrutement</option>
                            <option>DRH</option>
                            <option>General Manager</option>
                            <option>Autre</option>
                        </select>
                        <div class="dropDownSelect2"></div>
                    </div>
                </div>

                <div class="rs1-wrap-input100">
                    <span class="label-input100 ">Prénom*</span>
                    <div class="wrap-input100 validate-input bg1" data-validate="SVP Veuillez entrer votre prénom">
                        <input class="input100" type="text" name="nom" >
                    </div>
                </div>

                <div class="rs1-wrap-input100">
                    <span class="label-input100">Nom*</span>
                    <div class="wrap-input100 validate-input bg1" data-validate="SVP Veuillez entrer votre nom">
                        <input class="input100" type="text" name="nom" >
                    </div>
                </div>

                <div class="rs1-wrap-input100">
                    <span class="label-input100">Nom de votre organisation*</span>
                    <div class="wrap-input100 validate-input bg1" data-validate="SVP Veuillez entrer le nom votre organisation">
                        <input class="input100" type="text" name="organisation" >
                    </div>
                </div>

                <div class="rs1-wrap-input100">
                    <span class="label-input100">Téléphone*</span>
                    <div class="wrap-input100 validate-input bg1" data-validate="SVP Veuillez entrer votre numéro télèphone">
                        <input class="input100" type="text" name="phone" >
                    </div>
                </div>

                <div class="rs1-wrap-input100">
                    <span class="label-input100">Email *</span>
                    <div class="wrap-input100 validate-input bg1 " data-validate = "SVP Veuillez entrer email (email@a.z)">
                        <input class="input100" type="email" name="email" >
                    </div>
                </div>

                <div class="rs1-wrap-input100">
                    <span class="label-input100">Pays*</span>
                    <div class="wrap-input100 input100-select  bg1">
                        <div>
                            <select class="js-select2" name="service">
                                <option>Sélectionner</option>
                                <option>Madagascar</option>
                                <option>France</option>
                                <option>Italie</option>
                                <option>...</option>
                            </select>
                            <div class="dropDownSelect2"></div>
                        </div>
                    </div>
                </div>

                <span class="label-input100">Message*</span>
                <div class="wrap-input100 validate-input bg0 rs1-alert-validate" data-validate = "SVP Veuillez entrer votre Message...">
                    <textarea class="input100" name="message" ></textarea>
                </div>

                <div class="container-contact100-form-btn">
                    <button class="contact100-form-btn">
						<span>Envoyer
							<i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
						</span>
                    </button>
                </div>


            </form>
        </div>
    </div>
{% endblock %}