{% extends 'front.html.twig' %}

{% block style %}
{% endblock %}

{% block body %}
<div class="container-fluid" style="padding-top: 150px;padding-bottom: 50px;
                                     background-image: url(assets/images/service/cvvideo/20.jpg);">
    <div class="container">
        <div class="row" id="tem" style="margin-left: 30em;">
             <p><img  width="100%" height="250px" src="{{ daily.image }}"width="100%" height="300px" ></p>
             

        </div>
        <div id="desc" style="text-align: center;padding-bottom: 50px;">

        </div>

        <hr>

        <div class="row" style="text-align: center;font-size: 30px;">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h2 data-aos="fade-left"data-aos-duration="800" style="font-family:'Raleway', sans-serif;
                  color:#fff;
                  font-weight: bold;
                  font-size: 45px;
                  text-align:center;"><strong>Tous les Daily Quotes </strong> </h2>
            </div>
        </div>
        <hr>
        <div class="row" id="daily" style="text-align: center;padding-top: 30px;">
               {% if dailys|length != 0 %}
                        {% for d in dailys %}
                            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12"><div style="background-color: #2d2d2c; width: 100%; text-align: center"><a href="{{ path('show_daily',{id: d.id}) }}"><img width="100%" height="300px" src="d.image" alt="post"><p style="color:#fff;background-color:#ffbd59;padding-bottom:10px;padding-top:10px;font-size:20px;"><strong>{{ d.titre }}</strong></p></a></div></div>
                        {% endfor %}
                    {% else  %}
                        <p>Aucun Daily Quotes pour l'instant</p>
                    {% endif %}

        </div>
    </div>
</div>


{% endblock %}