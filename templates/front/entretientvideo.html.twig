{% extends 'front.html.twig' %}

{% block style %}
{% endblock %}

{% block body %}
<div class="container-fluid" style="padding-top: 150px;padding-bottom: 50px;
                                     background-image: url(/assets/images/service/cvvideo/43.jpg);">
    <div class="container">
        <div class="row" id="tem" style="text-align:center;">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div><iframe style="height:400px;width:800px;text-align: center;" src="{{ entretient.video }}" width="720px" height="450px"></iframe></div>
            </div>
        </div>
        <div id="desc" style="text-align: center;padding-bottom: 50px;">
            <p style="color:#fff;padding-bottom:10px;padding-top:10px;font-size:20px;" data-aos="fade-left"data-aos-duration="600"><strong>{{ entretient.description }}</strong></p>

        </div>

        <hr>

        <div class="row" style="text-align: center;color: #fff;font-size: 30px;">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h2 data-aos="fade-left"data-aos-duration="800">
                    <strong>TOUS LES ENTRETIENS VIDEOS</strong>
                </h2>
            </div>
        </div>
         <hr>
        <div class="row" id="entretientvideo" style="text-align: center;padding-top: 30px;">
            {% if entretients|length != 0 %}
                {% for e in entretients %}

            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div style="background-color: #2d2d2c; width:100%;text-align: center">
                    <div><a href="{{ path('show_entretient',{id: e.id}) }}"><video  poster="/assets/img/video3.png" src="{{ e.video }}"width="100%" height="300px"></video><p style="color:#fff;background-color:#ffbd59;padding-bottom:10px;padding-top:10px;font-size:20px;"><strong>{{ e.description }}</strong></p></a>
                    </div>

                </div>
            </div>
                {% endfor %}
            {% else  %}
                <p></p>
            {% endif %}
            
        </div>  
    </div>
  </div>
  

<script>
    var xhrtt=new XMLHttpRequest();
    xhrtt.open('GET','http://127.0.0.1:8000/api/video/Entretient');
    xhrtt.onreadystatechange=function () {
        if (this.readyState === 4 && this.status === 200) {
            var arr=JSON.parse(xhrtt.response);

            for(var i=0;i<arr.length;i++) {
                document.getElementById("entretientvideo").innerHTML +=
                    '<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12"><div style="background-color: #2d2d2c; width:100%;text-align: center"><div><a href="index.php?page=entretientvideo&identretientvideo='+arr[i].id+'""><video  poster="/Corban/application/assets/img/video3.png" src="http://localhost/Corban/application/back/public/uploads/'+arr[i].video +'"width="100%" height="300px"></video><p style="color:#fff;background-color:#ffbd59;padding-bottom:10px;padding-top:10px;font-size:20px;"><strong>'+arr[i].description+'</strong></p></a><div></div></div>'
            }
        }
    };
    xhrtt.send()
</script>
{% endblock %}