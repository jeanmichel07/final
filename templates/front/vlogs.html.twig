{% extends 'front.html.twig' %}

{% block style %}
{% endblock %}

{% block body %}
 <div class="container-fluid" style="padding-top: 150px;padding-bottom: 50px;
                                     background-image: url(assets/images/service/cvvideo/20.jpg);">
    <div class="container">
        <div class="row" id="tem" style="margin-left: 2px;">
             <p><iframe src="{{ vlog.video }}"width="100%" height="300px" ></iframe></p>


        </div>
        <div id="desc" data-aos="fade-left" data-aos-duration="900" id="desc" style="float: right; width: 600px; text-align: left; margin-top: -350px; margin-right:10px;">
            <p style="color:green;padding-bottom:10px;padding-top:15px;font-size:17px;" data-aos="fade-left"data-aos-duration="800">{{vlog.description}}</p>

        </div>

        <hr>

       <div class="row">
              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h2 data-aos="fade-right" data-aos-duration="800" style="color: #222222;
                          text-align: center;
                          font-family: 'Raleway', sans-serif;
                          font-weight: bold;
                          padding-bottom: 70px;
                          font-size: 45px;">Tous les Vlog</h2>
              </div>            
        </div>
        
        <div class="row" id="vlog" style="text-align: center;padding-top: 30px;">
             {% if vlogs|length != 0 %}
                        {% for v in vlogs %}



                            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12"><div style="background-color: #2d2d2c; width: 100%; text-align: center"><a href="{{ path('show_vlog',{id: v.id}) }}"><video poster="/assets/images/ressource/poster/pvlogs.png"  src="{{ v.video }}" width="100%" height="300px"></video><p style="color:#fff;background-color:#ffbd59;padding-bottom:10px;padding-top:10px;font-size:20px;"><strong>{{ v.titre }}</strong></p></a></div></div>

                        {% endfor %}
                    {% else  %}
                        <p>Aucun vlog pour l'instant</p>
                    {% endif %}
            
        </div>  
    </div>
  </div>
 
  
{% endblock %}