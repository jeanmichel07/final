{% extends 'front.html.twig' %}

{% block style %}
{% endblock %}

{% block body %}
<div class="container-fluid" style="padding-top: 150px;padding-bottom: 50px;
                                     background-image: url(assets/images/service/cvvideo/20.jpg);">
    <div class="container">
        <div class="row" id="tem" style="margin-left: 2px;">
            <p><iframe src="{{ success.video }}"width="100%" height="300px" ></iframe></p>
             <p style="color:green;padding-bottom:10px;padding-top:15px;font-size:17px;" data-aos="fade-left"data-aos-duration="800">{{success.description}}</p>
        </div>
        <div id="desc" data-aos="fade-left" data-aos-duration="900" id="desc" style="float: right; width: 600px; text-align: center; margin-top: -400px; margin-right:1px;">

        </div>

        <hr>

        <div class="row" style="text-align: center;color: #fff;font-size: 30px;">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h2 data-aos="fade-left"data-aos-duration="800" style="font-family:'Raleway', sans-serif; 
                  color:#fff;
                  font-weight: bold;
                  font-size: 45px;
                  text-align:center;">Tous les success stories</h2>
            </div>
        </div>
         <hr>
        <div class="row" id="storie" style="text-align: center;padding-top: 30px;">
             {% if succes|length != 0 %}
                        {% for s in succes %}
                            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12"><div style="background-color: #2d2d2c; width: 100%; text-align: center"><a href="{{ path('show_success',{id: s.id}) }}"><video poster="/assets/images/ressource/poster/pstory.png"  src="{{ s.video }}" width="100%" height="300px"></video><p style="color:#fff;background-color:#ffbd59;padding-bottom:10px;padding-top:10px;font-size:20px;"><strong>{{ s.titre }}</strong></p></a></div></div>
                        {% endfor %}
                    {% else  %}
                        <p>Aucun success stories pour l'instant</p>
                    {% endif %}
            
        </div>  
    </div>
  </div>
  
    
{% endblock %}