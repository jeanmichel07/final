{% extends 'front.html.twig' %}

{% block style %}
{% endblock %}

{% block body %}
 <div class="container-fluid" style="padding-top: 150px;padding-bottom: 50px;">
    <div class="container">
        <div class="row" id="tem" style="text-align:center;">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"><div><video controls src="{{ cv.video }}" width="720px" height="450px"></video></div>

        </div>


        <hr>

        <div class="row" style="text-align: center;color: #fff;font-size: 30px;">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h2 data-aos="fade-left"data-aos-duration="800">
                    <strong>TOUS LES CV VIDEOS</strong>
                </h2>
            </div>
        </div>
         <hr>
        <div class="row" id="cvvideo" style="text-align: center;padding-top: 30px;">
            {% if cvs|length != 0 %}
                {% for c in cvs %}
                         <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12"><div style="background-color:#2d2d2c; width:100%;text-align: center"><div><a href="{{ path('show_video',{id: c.id}) }}"><video poster="/assets/img/video2.png" src="{{ c.video }}"width="100%" height="300px"></video><p style="color:#fff;background-color:#ffbd59;padding-bottom:10px;padding-top:10px;font-size:20px;"><strong>{{ c.description }}</strong></p></a></div></div></div>
                {% endfor %}
                {% else  %}
                <p></p>
            {% endif %}
        </div>  
    </div>
 </div>
{% endblock %}