{% extends 'front.html.twig' %}

{% block style %}
{% endblock %}

{% block body %}
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
          <img src="assets/images/ressource/20.jpg" class="d-block w-100" alt="">
          <div class="carousel-caption d-none d-md-block" style="bottom: 200px;
                    text-align: center;">
            <div>
              <a href="{{ path('ressource')}}">
                <h4 style="font-weight: bold;
                        font-family: 'Raleway', sans-serif;
                        font-size: 50px;
                        color: #545454">Toutes nos ressources
              </h4>
              </a>
              
              <p style="color: #545454;
                        font-size: 20px;
                        font-family: 'Raleway', sans-serif;
                        ">Profitez gratuitement de nos ressources et consommez les sans mod√©ration.
              </p>
          </div>
      </div>
    </div>
</div>
</div>

<section class="container-fluid" style="background-color:  #fff ;padding: 80px 20px;">
        <div class="container">
            <div class="row">
              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h2 data-aos="fade-right" data-aos-duration="800" style="color: #222222;
                          text-align: center;
                          font-family: 'Raleway', sans-serif;
                          font-weight: bold;
                          padding-bottom: 70px;
                          font-size: 45px;">Tous les Vlog</h2>
              </div>            
            </div>    
             <div class="row" id="vlog" style="text-align: center;">
               {% if vlog|length != 0 %}
                    {% for v in vlog %}
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12"><div style="background-color: #2d2d2c; width: 100%; text-align: center"><a href="{{ path('show_vlog',{id: v.id}) }}"><video poster="/assets/images/ressource/poster/pvlogs.png" src="{{ v.video }}" width="100%" height="300px"></video><p style="color:#fff;background-color:#ffbd59;padding-bottom:10px;padding-top:10px;font-size:20px;"><strong>{{ v.titre }}</strong></p></a></div></div>
                    {% endfor %}
                {% else  %}
                <p>Aucun vlog pour l'instant</p>
                {% endif %}
              
              
            </div>
        </div>
    </section>


{% endblock %}