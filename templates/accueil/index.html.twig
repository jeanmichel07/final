{% extends 'base.html.twig' %}

{% block title %}Accueil index{% endblock %}

{% block body %}
    <h1>Accueil index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for accueil in accueils|reverse %}
            <tr>
                <td><img width="75px" src="/home/{{ accueil.image }}"></td>
                <td>{{ accueil.title }}</td>
                <td>{{ accueil.description }}</td>
                <td>
                    <a href="{{ path('accueil_show', {'id': accueil.id}) }}">show</a>
                    <a href="{{ path('accueil_edit', {'id': accueil.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('accueil_new') }}">Create new</a>
{% endblock %}
