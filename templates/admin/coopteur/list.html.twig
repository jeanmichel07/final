{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Les coopteurs</h1>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Nom</th>

            </tr>
            </thead>
            <tbody>
            {% for c in coopteur %}
                <tr>
                    <td>{{ c.nom }}</td>

                    <td>
                        <a href="{{ path('show_coopteur', {id: c.id}) }}" class="btn btn-info">Voir</a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
