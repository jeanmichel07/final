{% extends 'front.html.twig' %}

{% block style %}
    <style>
        .center {
            margin: auto;
            width: 50%;
            height: 45%;
            background-color: #fff ;
            padding-bottom: 5%;
        }
        .btn-8{
            text-align: center;
            font-weight: bold;
            padding: 10px 40px;
            font-size: 25px;
            color: #545454;
            background: #6495ED;
            border-radius: 10px;
            border: none;

        }
        .btn-8:hover{
            font-weight: bold;
            padding: 10px 40px;
            font-size: 25px;
            border-radius: 10px;
            background:#545454;
            border:2px solid #fff;
            color: #fff;
        }

    </style>
{% endblock %}

{% block body %}

    <section class="container-fluid" style="background:linear-gradient(#ffde59,#ffbd59);
										padding-top:80px;
										padding-bottom: 30px;">
        <div class="container" style="padding-top: 5%; padding-bottom: 5%;">
            <div class="center">
                {% for message in app.flashes('info') %}
                    <div class="alert alert-success" style="text-align: center">
                        {{ message }}
                    </div>
                {% endfor %}

                <div class="row">
                    <div class="col-md-12" style="font-family:'Raleway', sans-serif;
						   color: #000000;
						   text-align: center;
						   font-size: 45px;
						   font-weight: bold;
						   padding-bottom: 15px;
						   padding-top: 50px">
                        Coopter

                    </div>
                </div>
                {{ form_start(form) }}

                <div class="row"  style="padding-bottom: 25px; ">
                    <div class="col-md-12" style="padding-left: 10%; padding-right: 15%" >

                        {{ form_row(form.cv) }}
                    </div>

                </div>

                <div class="row" style="text-align: center;padding-top: 5px;">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                        <input type="submit" class="btn-8" value="ENVOYER"/>
                    </div>

                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}




