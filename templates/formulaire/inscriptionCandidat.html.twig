{% extends 'front.html.twig' %}
{% block title %}Inscription Candidat{% endblock %}
    {% block style %}
        <style>
            .cont{
                width: 75%;
                text-align: left;
                background-color: rgba(192,192,192,0.6);
                padding-left: 15px;
                padding-right: 15px;
                font-weight: bold;
                color: white;

            }

        </style>
    {% endblock %}
{% block body %}
    <div class="container-fluid" style="padding-top: 4%; padding-bottom: 5%; background-image: url(/assets/images/accueil/1.jpg); background-size: cover">
        <center>
            <div class="cont">

                <h1 style="text-align: center">Inscription candidat</h1>
                {{ form_start(form) }}

                <div class="row" >
                    <div class="col-md-12 " >{{ form_row(form.photo,{'attr':{'class':'btn btn-primary', 'placeholder':'Votre Photo'} })}}</div>

                </div>


                <div class="row">
                    <div class="col-md-6" >   {{ form_row(form.nom,{'attr':{'class':'text' ,'placeholder':'Votre Nom'}}) }}</div>
                    <div class="col-md-6">   {{ form_row(form.dateNaissance) }}</div>

                </div>
                <div class="row">
                    <div class="col-md-6">  {{ form_row(form.candidatSexe) }}</div>
                    <div class="col-md-6">  {{ form_row(form.situation) }}</div>

                </div>
                <div class="row">
                    <div class="col-md-6">   {{ form_row(form.email,{'attr':{'placeholder': 'Votre Email'}}) }}</div>
                    <div class="col-md-6">  {{ form_row(form.telephone,{'attr':{'placeholder': 'Votre Numero de telephone'}}) }}</div>

                </div>
                <div class="row">
                    <div class="col-md-6">  {{ form_row(form.pays ,{'attr':{'placeholder': 'Votre Pays'}}) }}</div>
                    <div class="col-md-6">   {{ form_row(form.ville ,{'attr':{'placeholder': 'Votre Ville'}}) }}</div>

                </div>
                <div class="row">
                    <div class="col-md-6">   {{ form_row(form.adresse ,{'attr':{'placeholder': 'Votre Adresse'}}) }}</div>
                    <div class="col-md-6">   {{ form_row(form.username ,{'attr':{'placeholder': 'Votre Pseudo'}}) }}</div>
                </div>
                <div class="row">
                    <div class="col-md-6">    {{ form_row(form.password ,{'attr':{'placeholder': 'Entrer votre mot de passe'}}) }}</div>
                    <div class="col-md-6">    {{ form_row(form.confirmPassword ,{'attr':{'placeholder': 'confirmer votre mot de passe'}}) }}</div>
                </div>
                <center>
                    <input type="submit" class="btn btn-primary" style="width: 50%; height: 40px" value="S'INSCRIRE">
                </center>
                {{ form_end(form) }}
                <br><br>
            </div>
        </center>
    </div>





{% endblock %}

